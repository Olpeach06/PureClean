<Page x:Class="PureClean.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Корзина" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,30">

                    <TextBlock Text="🛒" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Корзина"
                               FontSize="24" FontWeight="Bold"
                               Foreground="#333333"/>

                    <!-- Счетчик товаров -->
                    <Border Background="#c69fd5" 
                            Padding="8,4"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center">

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Border.Style>

                        <TextBlock x:Name="txtItemCount"
                                   Text="3 товара"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Список товаров -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,0,0,30">

                    <StackPanel x:Name="cartItemsPanel">
                        <!-- Товары будут добавляться динамически -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Итоговая панель -->
                <Border Grid.Row="2" 
                        Background="#fdfdc9"
                        Padding="20">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Итоги -->
                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <TextBlock Text="Товаров:"
                                           Width="150"
                                           FontSize="14"/>
                                <TextBlock x:Name="txtTotalItems"
                                           Text="3"
                                           FontWeight="Medium"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <TextBlock Text="Общая сумма:"
                                           Width="150"
                                           FontSize="14"/>
                                <TextBlock x:Name="txtTotalAmount"
                                           Text="4 100 ₽"
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="#c69fd5"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кнопки -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal">

                            <Button Content="ОЧИСТИТЬ КОРЗИНУ"
                                    Background="Transparent"
                                    Foreground="#666666"
                                    BorderThickness="1"
                                    BorderBrush="#666666"
                                    Height="40"
                                    FontSize="13"
                                    Margin="0,0,10,0"
                                    Cursor="Hand">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            CornerRadius="5"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="ОФОРМИТЬ ЗАКАЗ"
                                    Background="#c69fd5"
                                    Foreground="White"
                                    Width="200" 
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            CornerRadius="5"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Пустая корзина -->
        <Border Background="White"
                Padding="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed"
                x:Name="emptyCartPanel">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🛒" 
                           FontSize="100"
                           Foreground="#c69fd5" 
                           Opacity="0.3"/>

                <TextBlock Text="Корзина пуста"
                           FontSize="24" 
                           FontWeight="Bold"
                           Margin="0,20,0,10"/>

                <TextBlock Text="Добавьте услуги из каталога"
                           Foreground="#666666"
                           Margin="0,0,0,30"/>

                <Button Content="ПЕРЕЙТИ В КАТАЛОГ"
                        Background="#c69fd5"
                        Foreground="White"
                        Width="200"
                        Height="40"
                        FontWeight="Bold"
                        Cursor="Hand">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>