<Page x:Class="PureClean.Pages.MaterialsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управление материалами" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопки (добавил кнопку Назад) -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            Margin="0,0,0,30">

                    <!-- Кнопка Назад -->
                    <Button x:Name="btnBack"
                            Content="← Назад"
                            Width="100"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            FontSize="14"
                            Cursor="Hand"
                            Click="btnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="📦" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Управление материалами"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"/>

                    <Button x:Name="btnAddMaterial"
                            Content="+ Добавить материал"
                            Background="#c69fd5"
                            Foreground="White"
                            Width="200"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="30,0,0,0"
                            Cursor="Hand"
                            Click="btnAddMaterial_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnNewSupply"
                            Content="Новая поставка"
                            Background="Transparent"
                            Foreground="#c69fd5"
                            BorderThickness="1"
                            BorderBrush="#c69fd5"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            Margin="10,0,0,0"
                            Cursor="Hand"
                            Click="btnNewSupply_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#fdfdc9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Вкладки -->
                <TabControl Grid.Row="1"
                            BorderThickness="0"
                            Background="Transparent">

                    <TabItem Header="Материалы на складе">
                        <Border Background="#fdfdc9"
                                Padding="15">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Border.Style>

                            <DataGrid x:Name="materialsGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      BorderThickness="0"
                                      Background="Transparent">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" 
                                                        Binding="{Binding Name}"
                                                        Width="200"/>

                                    <DataGridTextColumn Header="Единица" 
                                                        Binding="{Binding Unit}"
                                                        Width="80"/>

                                    <DataGridTextColumn Header="На складе" 
                                                        Binding="{Binding InStock}"
                                                        Width="100"/>

                                    <DataGridTextColumn Header="Мин. запас" 
                                                        Binding="{Binding MinQuantityText}"
                                                        Width="100"/>

                                    <DataGridTemplateColumn Header="Статус" 
                                                            Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}"
                                                        Padding="5,2"
                                                        CornerRadius="3">
                                                    <TextBlock Text="{Binding Status}"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Действия" 
                                                            Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="✏️"
                                                            Width="30" 
                                                            Height="30"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Click="btnEditMaterial_Click"
                                                            Tag="{Binding MaterialID}"
                                                            Margin="0,0,5,0"/>

                                                    <Button Content="🗑️"
                                                            Width="30" 
                                                            Height="30"
                                                            Background="Transparent"
                                                            Foreground="#FF4444"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Click="btnDeleteMaterial_Click"
                                                            Tag="{Binding MaterialID}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </TabItem>

                    <TabItem Header="История поставок">
                        <Border Background="#fdfdc9"
                                Padding="15">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Border.Style>

                            <DataGrid x:Name="suppliesGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      BorderThickness="0"
                                      Background="Transparent">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Дата" 
                                                        Binding="{Binding Date}"
                                                        Width="100"/>

                                    <DataGridTextColumn Header="Материал" 
                                                        Binding="{Binding Material}"
                                                        Width="150"/>

                                    <DataGridTextColumn Header="Поставщик" 
                                                        Binding="{Binding Supplier}"
                                                        Width="150"/>

                                    <DataGridTextColumn Header="Количество" 
                                                        Binding="{Binding Quantity}"
                                                        Width="100"/>

                                    <DataGridTextColumn Header="Цена" 
                                                        Binding="{Binding Price}"
                                                        Width="100"/>

                                    <DataGridTextColumn Header="Накладная" 
                                                        Binding="{Binding Invoice}"
                                                        Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </TabItem>
                </TabControl>

                <!-- Итоги -->
                <Border Grid.Row="2"
                        Background="#e8f5e8"
                        Padding="15"
                        Margin="0,20,0,0"
                        CornerRadius="10">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊 Материалов на складе:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtTotalMaterials"
                                   Text="0"
                                   Foreground="#c69fd5"
                                   FontWeight="Bold"
                                   Margin="0,0,30,0"/>

                        <TextBlock Text="⚠️ Требуется заказ:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtNeedOrderCount"
                                   Text="0"
                                   Foreground="#FF4444"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>