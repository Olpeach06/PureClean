<Page x:Class="PureClean.Pages.OrderDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Детали заказа" 
      Background="#fdfdc9"
      Loaded="Page_Loaded">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <ScrollViewer>
                <StackPanel>
                    <!-- Заголовок и статус -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,30">

                        <TextBlock Text="📄" 
                                   FontSize="32"
                                   Foreground="#c69fd5"
                                   Margin="0,0,15,0"/>

                        <StackPanel>
                            <TextBlock x:Name="txtOrderNumber"
                                       Text="Заказ №"
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="#333333"/>

                            <Border x:Name="statusBorder"
                                    Background="#4CAF50"
                                    Padding="8,4"
                                    Margin="0,5,0,0"
                                    CornerRadius="5">
                                <TextBlock x:Name="txtStatus"
                                           Text="Готов"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Информация о заказе -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Левая колонка -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Информация о заказе"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,15"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Клиент:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtClientName"
                                               Text="Иванов Иван Иванович"
                                               FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Телефон:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtClientPhone"
                                               Text="+7 (999) 123-45-67"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Email:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtClientEmail"
                                               Text="ivan@example.com"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Принял:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtEmployeeName"
                                               Text="Петрова Мария"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Правая колонка -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Сроки выполнения"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,15"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Дата приема:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtAcceptanceDate"
                                               Text="10.12.2024 14:30"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="План сдачи:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtPlannedDate"
                                               Text="13.12.2024 18:00"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Факт сдачи:"
                                               Width="120"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="txtActualDate"
                                               Text="13.12.2024 16:45"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Состав заказа -->
                    <TextBlock Text="Состав заказа"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <Border Background="#fdfdc9"
                            Padding="15"
                            Margin="0,0,0,30">

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Border.Style>

                        <DataGrid x:Name="orderItemsGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  BorderThickness="0"
                                  Background="Transparent">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Услуга" 
                                                    Binding="{Binding Service}"
                                                    Width="200"/>

                                <DataGridTextColumn Header="Количество" 
                                                    Binding="{Binding Quantity}"
                                                    Width="80"/>

                                <DataGridTextColumn Header="Цена за шт." 
                                                    Binding="{Binding Price}"
                                                    Width="100"/>

                                <DataGridTextColumn Header="Сумма" 
                                                    Binding="{Binding Total}"
                                                    Width="100"/>

                                <DataGridTextColumn Header="Комментарий" 
                                                    Binding="{Binding Comment}"
                                                    Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Итоговая информация -->
                    <Border Background="#fdfdc9"
                            Padding="20"
                            Margin="0,0,0,30">

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Комментарий -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Комментарий к заказу"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="txtComment"
                                           Text="Комментарий отсутствует"
                                           Foreground="#666666"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Итоги -->
                            <StackPanel Grid.Column="1"
                                        Width="200">
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Сумма заказа:"
                                               Width="120"/>
                                    <TextBlock x:Name="txtTotalAmount"
                                               Text="0 ₽"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Предоплата:"
                                               Width="120"/>
                                    <TextBlock x:Name="txtPrepayment"
                                               Text="0 ₽"
                                               Foreground="#4CAF50"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="К оплате:"
                                               Width="120"/>
                                    <TextBlock x:Name="txtRemainder"
                                               Text="0 ₽"
                                               FontWeight="Bold"
                                               Foreground="#c69fd5"
                                               FontSize="16"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Кнопки действий -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Button Content="НАЗАД"
                                x:Name="btnBack"
                                Background="Transparent"
                                Foreground="#666666"
                                BorderThickness="1"
                                BorderBrush="#666666"
                                Width="100" 
                                Height="40"
                                FontSize="13"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Click="btnBack_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="ПЕЧАТЬ"
                                Background="#c69fd5"
                                Foreground="White"
                                Width="100" 
                                Height="40"
                                FontSize="13"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Click="btnPrint_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="ИЗМЕНИТЬ СТАТУС"
                                x:Name="btnChangeStatus"
                                Background="#c69fd5"
                                Foreground="White"
                                Width="150" 
                                Height="40"
                                FontSize="13"
                                Cursor="Hand"
                                Click="btnChangeStatus_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>