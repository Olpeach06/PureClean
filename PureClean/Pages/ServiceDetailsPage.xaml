<Page x:Class="PureClean.Pages.ServiceDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="Детали услуги" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30"
                CornerRadius="15">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <ScrollViewer>
                <StackPanel>
                    <!-- Заголовок -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,30">

                        <Border Width="80" 
                                Height="80"
                                Background="#fdfdc9"
                                Margin="0,0,15,0"
                                CornerRadius="10">

                            <TextBlock Text="🖼️"
                                       FontSize="40"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#c69fd5"/>
                        </Border>

                        <StackPanel>
                            <TextBlock x:Name="serviceNameText"
                                       Text="Название услуги"
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="#333333"/>

                            <TextBlock x:Name="categoryText"
                                       Text="Категория"
                                       FontSize="14"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Цена и скидка -->
                    <Border Background="#fdfdc9"
                            Padding="20"
                            Margin="0,0,0,30"
                            CornerRadius="10">

                        <StackPanel Orientation="Horizontal">

                            <!-- Цены -->
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,5">
                                    <TextBlock Text="Старая цена:"
                                               Foreground="#666666"
                                               Margin="0,0,10,0"/>
                                    <TextBlock x:Name="oldPriceText"
                                               Text=""
                                               TextDecorations="Strikethrough"
                                               Foreground="#999999"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Новая цена:"
                                               Foreground="#333333"
                                               FontWeight="SemiBold"
                                               Margin="0,0,10,0"/>
                                    <TextBlock x:Name="currentPriceText"
                                               Text="0 ₽"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#c69fd5"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Скидка -->
                            <Border x:Name="discountBorder"
                                    Background="#FF4081"
                                    Padding="10,5"
                                    VerticalAlignment="Center"
                                    CornerRadius="5"
                                    Visibility="Collapsed"
                                    Margin="30,0,0,0">

                                <TextBlock x:Name="discountText"
                                           Text=""
                                           Foreground="White"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Описание -->
                    <TextBlock Text="Описание услуги"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <Border Background="#fdfdc9"
                            Padding="20"
                            Margin="0,0,0,30"
                            CornerRadius="10">

                        <TextBlock x:Name="descriptionText"
                                   Text="Описание отсутствует"
                                   Foreground="#333333"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   LineHeight="22"/>
                    </Border>

                    <!-- Характеристики -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Левая колонка -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Характеристики"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,15"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Время выполнения:"
                                               Width="150"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="executionTimeText"
                                               Text="0 часов"
                                               FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Категория:"
                                               Width="150"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="categoryDetailText"
                                               Text="Не указана"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Правая колонка -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Статистика"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="0,0,0,15"/>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Заказов выполнено:"
                                               Width="150"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="ordersCountText"
                                               Text="0"
                                               FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="Рейтинг:"
                                               Width="150"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="ratingText"
                                               Text="Нет оценок"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="ID услуги:"
                                               Width="150"
                                               Foreground="#666666"/>
                                    <TextBlock x:Name="addedDateText"
                                               Text="0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Инструкции по уходу -->
                    <TextBlock Text="Инструкции по уходу"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,0,0,15"/>

                    <Border Background="#fdfdc9"
                            Padding="20"
                            Margin="0,0,0,30"
                            CornerRadius="10">

                        <TextBlock x:Name="careInstructionsText"
                                   Text="• Инструкции по уходу отсутствуют"
                                   Foreground="#333333"
                                   FontSize="14"
                                   LineHeight="24"/>
                    </Border>

                    <!-- Кнопки действий -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Button x:Name="btnBack"
                                Content="НАЗАД"
                                Background="Transparent"
                                Foreground="#666666"
                                BorderThickness="1"
                                BorderBrush="#666666"
                                Width="100" 
                                Height="40"
                                FontSize="13"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Click="btnBack_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnAddToCart"
                                Content="В КОРЗИНУ"
                                Background="#c69fd5"
                                Foreground="White"
                                Width="150" 
                                Height="40"
                                FontSize="13"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="btnAddToCart_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>