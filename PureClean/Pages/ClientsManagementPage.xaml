<Page x:Class="PureClean.Pages.ClientsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управление клиентами" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            Margin="0,0,0,30">

                    <TextBlock Text="👥" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Управление клиентами"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"/>
                </StackPanel>

                <!-- Таблица клиентов -->
                <Border Grid.Row="1"
                        Background="#fdfdc9"
                        Padding="15">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <DataGrid x:Name="clientsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ФИО" 
                                                Binding="{Binding FullName}"
                                                Width="200"/>

                            <DataGridTextColumn Header="Телефон" 
                                                Binding="{Binding Phone}"
                                                Width="120"/>

                            <DataGridTextColumn Header="Email" 
                                                Binding="{Binding Email}"
                                                Width="150"/>

                            <DataGridTextColumn Header="Дата регистрации" 
                                                Binding="{Binding RegistrationDate}"
                                                Width="120"/>

                            <DataGridTextColumn Header="Заказов" 
                                                Binding="{Binding OrdersCount}"
                                                Width="80"/>

                            <DataGridTextColumn Header="Сумма заказов" 
                                                Binding="{Binding TotalAmount}"
                                                Width="120"/>

                            <DataGridTemplateColumn Header="Действия" 
                                                    Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="👁️"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Margin="0,0,5,0"/>

                                            <Button Content="✏️"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>