<Page x:Class="PureClean.Pages.MyOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Мои заказы" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и фильтры -->
                <StackPanel Grid.Row="0" 
                            Margin="0,0,0,30">

                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,20">
                        <TextBlock Text="📋" 
                                   FontSize="32"
                                   Foreground="#c69fd5"
                                   Margin="0,0,15,0"/>

                        <TextBlock Text="История заказов"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                    </StackPanel>

                    <!-- Фильтры -->
                    <WrapPanel>
                        <ComboBox Width="150" 
                                  Margin="0,0,10,10">

                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </ComboBox.Style>

                            <ComboBoxItem Content="Все статусы"/>
                            <ComboBoxItem Content="Принят"/>
                            <ComboBoxItem Content="В работе"/>
                            <ComboBoxItem Content="Готов"/>
                            <ComboBoxItem Content="Выдан"/>
                        </ComboBox>

                        <DatePicker Width="150" 
                                    Margin="0,0,10,10"/>

                        <DatePicker Width="150" 
                                    Margin="0,0,10,10"/>

                        <Button Content="ПРИМЕНИТЬ"
                                Background="Transparent"
                                Foreground="#666666"
                                BorderThickness="1"
                                BorderBrush="#666666"
                                Height="35"
                                FontSize="13"
                                Margin="0,0,10,10"
                                Cursor="Hand">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        CornerRadius="5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>
                </StackPanel>

                <!-- Список заказов -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto">

                    <StackPanel x:Name="ordersPanel">
                        <!-- Заказы будут добавляться динамически -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>