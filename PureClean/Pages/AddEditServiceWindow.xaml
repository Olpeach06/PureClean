<Window x:Class="PureClean.Pages.AddEditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fdfdc9"
        Loaded="Window_Loaded">

    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="15">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                              ShadowDepth="3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Margin="0,0,0,20">

                <TextBlock Text="{Binding ServiceIcon}" 
                           FontSize="28"
                           Foreground="#c69fd5"
                           Margin="0,0,15,0"/>

                <TextBlock Text="{Binding WindowTitle}"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Форма -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,20">
                <StackPanel>
                    <!-- Название услуги -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Название услуги *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="100">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Описание -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Описание"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDescription"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="500"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="true"
                                 VerticalScrollBarVisibility="Auto">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Категория -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Категория *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbCategory"
                                  FontSize="14"
                                  Padding="10"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="CategoryID">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="toggleButton" 
                                                                  Grid.Column="2" 
                                                                  Focusable="false"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                        <ColumnDefinition Width="20" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border x:Name="Border" 
                                                                            Grid.ColumnSpan="2"
                                                                            Background="White"
                                                                            BorderBrush="#c69fd5"
                                                                            BorderThickness="1"
                                                                            CornerRadius="0,5,5,0"/>
                                                                    <Border Grid.Column="1" 
                                                                            Margin="1"
                                                                            Background="#c69fd5"
                                                                            CornerRadius="0,4,4,0">
                                                                        <Path x:Name="Arrow"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              Fill="White"
                                                                              Data="M0,0 L4,4 8,0 z"/>
                                                                    </Border>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>
                                                    <ContentPresenter x:Name="contentPresenter"
                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      Margin="10,0,30,0"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      IsHitTestVisible="False"/>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True" 
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Grid x:Name="DropDown"
                                                              SnapsToDevicePixels="True" 
                                                              MinWidth="{TemplateBinding ActualWidth}"
                                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                            <Border x:Name="DropDownBorder"
                                                                    Background="White"
                                                                    BorderBrush="#c69fd5"
                                                                    BorderThickness="1"
                                                                    CornerRadius="0,0,5,5"/>
                                                            <ScrollViewer SnapsToDevicePixels="True">
                                                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>

                    <!-- Цены -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Базовая цена -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Базовая цена (₽) *"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtBasePrice"
                                     FontSize="14"
                                     Padding="10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Скидка -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Скидка (%)"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtDiscount"
                                     FontSize="14"
                                     Padding="10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <!-- Время выполнения -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Время выполнения (часы) *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtExecutionTime"
                                 FontSize="14"
                                 Padding="10">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Изображение -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Путь к изображению"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtImagePath"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="200">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Старая цена (только при скидке) -->
                    <Border x:Name="oldPriceSection"
                            Margin="0,0,0,15"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Старая цена (₽)"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtOldPrice"
                                     FontSize="14"
                                     Padding="10">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Итоговая цена -->
                    <Border Background="#f0f8ff"
                            BorderBrush="#87CEEB"
                            BorderThickness="1"
                            Padding="15"
                            CornerRadius="5"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Итоговая цена:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtFinalPrice"
                                       Text="0.00 ₽"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#c69fd5"/>
                        </StackPanel>
                    </Border>

                    <!-- Ошибки валидации -->
                    <Border x:Name="errorBorder"
                            Background="#FFEBEE"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="5"
                            Margin="0,0,0,15"
                            Visibility="Collapsed">
                        <TextBlock x:Name="txtErrorMessage"
                                   Foreground="#D32F2F"
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancel"
                        Content="Отмена"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        Width="100"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Background="#c69fd5"
                        Foreground="White"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>