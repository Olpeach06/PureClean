<Page x:Class="PureClean.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Авторизация"
      Background="#fdfdc9">

    <Grid>
        <!-- Декоративный элемент -->
        <Border Width="300" Height="300" 
                Background="#c69fd5" Opacity="0.1"
                CornerRadius="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

        <!-- Карточка входа -->
        <Border Width="400" Background="White"
                CornerRadius="15"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <!-- Тень без Material Design -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  Opacity="0.2" 
                                  ShadowDepth="3" 
                                  Color="#000000"/>
            </Border.Effect>

            <StackPanel>
                <!-- Логотип и заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="🧼" 
                               FontSize="64"
                               Foreground="#c69fd5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="PureClean" 
                               FontSize="28" FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="Химчистка премиум-класса"
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Поля ввода -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Email или телефон" 
                               Foreground="#666666"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLogin"
                             FontSize="14" 
                             Padding="10"
                             BorderBrush="#c69fd5"
                             BorderThickness="0,0,0,2"
                             Background="Transparent">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#a074b3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль" 
                               Foreground="#666666"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 FontSize="14" 
                                 Padding="10"
                                 BorderBrush="#c69fd5"
                                 BorderThickness="0,0,0,2"
                                 Background="Transparent">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#a074b3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button Content="ВОЙТИ" 
                        Click="LoginButton_Click"
                        Background="#c69fd5"
                        Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        Height="45"
                        BorderThickness="0"
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#a074b3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Кнопка "Войти как гость" -->
                <Button Content="ВОЙТИ КАК ГОСТЬ" 
                        Click="GuestLoginButton_Click"
                        Background="Transparent"
                        Foreground="#c69fd5"
                        FontSize="14" FontWeight="Bold"
                        Height="40"
                        BorderThickness="2"
                        BorderBrush="#c69fd5"
                        Margin="0,0,0,20"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="guestBorder"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="guestBorder" Property="Background" Value="#fdfdc9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Разделитель -->
                <Border Height="1" Background="#e0e0e0" Margin="0,0,0,20"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink Click="RegisterHyperlink_Click"
                               Foreground="#c69fd5"
                               TextDecorations="None">
                        <Run Text="Нет аккаунта? Зарегистрироваться"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>