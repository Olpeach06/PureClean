<Page x:Class="PureClean.Pages.ReviewsManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управление отзывами" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопка Назад -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            Margin="0,0,0,30">

                    <Button x:Name="btnBack"
                            Content="← Назад"
                            Width="100"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            FontSize="14"
                            Cursor="Hand"
                            Click="btnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="⭐" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Управление отзывами"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"/>
                </StackPanel>

                <!-- Панель фильтров -->
                <Border Grid.Row="1"
                        Background="#fdfdc9"
                        Padding="20"
                        Margin="0,0,0,20"
                        CornerRadius="10">

                    <StackPanel>
                        <WrapPanel>
                            <!-- Поиск -->
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,20,10">
                                <Label Content="Поиск:"
                                       FontSize="14"
                                       Foreground="#333333"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                                <TextBox x:Name="txtSearch"
                                         Width="300"
                                         Padding="10"
                                         FontSize="14"
                                         TextChanged="txtSearch_TextChanged"
                                         BorderBrush="#c69fd5"
                                         BorderThickness="1">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="5" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                            </StackPanel>

                            <!-- Фильтр по рейтингу -->
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,20,10">
                                <Label Content="Рейтинг:"
                                       FontSize="14"
                                       Foreground="#333333"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                                <ComboBox x:Name="cmbRating"
                                          Width="150"
                                          SelectionChanged="cmbRating_SelectionChanged"
                                          BorderBrush="#c69fd5"
                                          BorderThickness="1">
                                    <ComboBoxItem Content="Все рейтинги" Tag=""/>
                                    <ComboBoxItem Content="⭐ (1)" Tag="1"/>
                                    <ComboBoxItem Content="⭐⭐ (2)" Tag="2"/>
                                    <ComboBoxItem Content="⭐⭐⭐ (3)" Tag="3"/>
                                    <ComboBoxItem Content="⭐⭐⭐⭐ (4)" Tag="4"/>
                                    <ComboBoxItem Content="⭐⭐⭐⭐⭐ (5)" Tag="5"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <Button x:Name="btnApplyFilters"
                                        Content="Применить"
                                        Background="Transparent"
                                        Foreground="#666666"
                                        BorderThickness="1"
                                        BorderBrush="#666666"
                                        Width="120"
                                        Height="35"
                                        FontSize="13"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"
                                        Click="btnApplyFilters_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                CornerRadius="5"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button x:Name="btnClearFilters"
                                        Content="Сбросить"
                                        Background="Transparent"
                                        Foreground="#666666"
                                        BorderThickness="1"
                                        BorderBrush="#666666"
                                        Width="120"
                                        Height="35"
                                        FontSize="13"
                                        Cursor="Hand"
                                        Click="btnClearFilters_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                CornerRadius="5"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Таблица отзывов -->
                <Border Grid.Row="2"
                        Background="#fdfdc9"
                        Padding="15"
                        Margin="0,0,0,20">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <DataGrid x:Name="reviewsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent"
                              RowHeight="60">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding ReviewID}"
                                                Width="60"/>

                            <DataGridTextColumn Header="Заказ №" 
                                                Binding="{Binding OrderID}"
                                                Width="80"/>

                            <DataGridTextColumn Header="Клиент" 
                                                Binding="{Binding ClientName}"
                                                Width="150"/>

                            <DataGridTemplateColumn Header="Рейтинг" 
                                                    Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding RatingStars}" 
                                                       FontSize="16"
                                                       Foreground="#FFD700"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Комментарий" 
                                                Binding="{Binding Comment}"
                                                Width="300"/>

                            <DataGridTextColumn Header="Дата" 
                                                Binding="{Binding CreatedDate}"
                                                Width="100"/>

                            <DataGridTemplateColumn Header="Статус" 
                                                    Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusColor}"
                                                Padding="5,2"
                                                CornerRadius="3">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Действия" 
                                                    Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="👁️"
                                                    ToolTip="Просмотреть детали"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="btnView_Click"
                                                    Tag="{Binding ReviewID}"
                                                    Margin="0,0,5,0"/>

                                            <Button Content="✏️"
                                                    ToolTip="Редактировать"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="btnEdit_Click"
                                                    Tag="{Binding ReviewID}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Статистика -->
                <Border Grid.Row="3"
                        Background="#e8f5e8"
                        Padding="15"
                        CornerRadius="10">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⭐ Всего отзывов: "
                                   FontSize="14"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtTotalReviews"
                                   Text="0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#c69fd5"
                                   Margin="5,0,30,0"/>

                        <TextBlock Text="📊 Средний рейтинг: "
                                   FontSize="14"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtAverageRating"
                                   Text="0.0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   Margin="5,0,30,0"/>

                        <TextBlock Text="⚠️ Скрыто: "
                                   FontSize="14"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtHiddenReviews"
                                   Text="0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#FF4444"
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>