<Page x:Class="PureClean.Pages.ServicesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управление услугами" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопки -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            Margin="0,0,0,30">

                    <TextBlock Text="🛠️" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Управление услугами"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"/>

                    <Button Content="+ Добавить услугу"
                            Background="#c69fd5"
                            Foreground="White"
                            Width="180"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="30,0,0,0"
                            Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Поиск и фильтры -->
                <Border Grid.Row="1"
                        Background="#fdfdc9"
                        Padding="20"
                        Margin="0,0,0,30">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <!-- Поиск -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,0,0,20">
                            <TextBox Width="300"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,20,0">

                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Content="Поиск"
                                    Background="#c69fd5"
                                    Foreground="White"
                                    Width="100"
                                    Height="40"
                                    FontSize="14"
                                    Cursor="Hand">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            CornerRadius="5"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Таблица услуг -->
                        <DataGrid x:Name="servicesGrid"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  Background="White"
                                  BorderThickness="0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" 
                                                    Binding="{Binding Name}"
                                                    Width="200"/>

                                <DataGridTextColumn Header="Категория" 
                                                    Binding="{Binding Category}"
                                                    Width="120"/>

                                <DataGridTextColumn Header="Цена" 
                                                    Binding="{Binding Price}"
                                                    Width="100"/>

                                <DataGridTextColumn Header="Скидка" 
                                                    Binding="{Binding Discount}"
                                                    Width="80"/>

                                <DataGridTextColumn Header="Время" 
                                                    Binding="{Binding Time}"
                                                    Width="80"/>

                                <DataGridTemplateColumn Header="Действия" 
                                                        Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️"
                                                        Width="30" 
                                                        Height="30"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Margin="0,0,5,0"/>

                                                <Button Content="👁️"
                                                        Width="30" 
                                                        Height="30"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Margin="0,0,5,0"/>

                                                <Button Content="🗑️"
                                                        Width="30" 
                                                        Height="30"
                                                        Background="Transparent"
                                                        Foreground="#FF4444"
                                                        BorderThickness="0"
                                                        Cursor="Hand"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Пагинация -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="◀"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Width="30"
                            Height="30"
                            Cursor="Hand"/>

                    <TextBlock Text="Страница 1 из 5"
                               VerticalAlignment="Center"
                               Margin="10,0,10,0"/>

                    <Button Content="▶"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Width="30"
                            Height="30"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>