<Page x:Class="PureClean.Pages.OrderCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Оформление заказа" 
      Background="#fdfdc9">

    <Grid>
        <!-- Мастер заказа -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Шаги -->
                <Border Grid.Row="0" 
                        Background="#fdfdc9"
                        Padding="20"
                        Margin="0,0,0,30">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">

                        <!-- Шаг 1 -->
                        <Border Width="40" Height="40"
                                Background="#c69fd5"
                                VerticalAlignment="Center">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="1" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Данные клиента"
                                   FontWeight="Bold"
                                   Margin="10,0,30,0"
                                   VerticalAlignment="Center"/>

                        <Rectangle Width="50" Height="2"
                                   Fill="#c69fd5" 
                                   Opacity="0.3"
                                   VerticalAlignment="Center"/>

                        <!-- Шаг 2 -->
                        <Border Width="40" Height="40"
                                Background="#c69fd5"
                                Opacity="0.5"
                                VerticalAlignment="Center">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="2" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Выбор услуг"
                                   FontWeight="Bold"
                                   Margin="10,0,30,0"
                                   VerticalAlignment="Center"/>

                        <Rectangle Width="50" Height="2"
                                   Fill="#c69fd5" 
                                   Opacity="0.3"
                                   VerticalAlignment="Center"/>

                        <!-- Шаг 3 -->
                        <Border Width="40" Height="40"
                                Background="#c69fd5"
                                Opacity="0.3"
                                VerticalAlignment="Center">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Border.Style>

                            <TextBlock Text="3" 
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Подтверждение"
                                   FontWeight="Bold"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Контент шага -->
                <Border Grid.Row="1" 
                        Background="#fdfdc9"
                        Padding="20"
                        Margin="0,0,0,30">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <!-- Данные клиента -->
                    <StackPanel x:Name="step1Panel">
                        <TextBlock Text="Данные клиента"
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Левая колонка -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Имя*"
                                           Foreground="#333333"
                                           FontSize="13"/>
                                    <TextBox Padding="10"
                                             FontSize="14">

                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Телефон*"
                                           Foreground="#333333"
                                           FontSize="13"/>
                                    <TextBox Padding="10"
                                             FontSize="14">

                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>
                            </StackPanel>

                            <!-- Правая колонка -->
                            <StackPanel Grid.Column="2">
                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Фамилия*"
                                           Foreground="#333333"
                                           FontSize="13"/>
                                    <TextBox Padding="10"
                                             FontSize="14">

                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Email"
                                           Foreground="#333333"
                                           FontSize="13"/>
                                    <TextBox Padding="10"
                                             FontSize="14">

                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Комментарий -->
                        <StackPanel Margin="0,20,0,0">
                            <Label Content="Комментарий к заказу"
                                   Foreground="#333333"
                                   FontSize="13"/>
                            <TextBox Padding="10"
                                     FontSize="14"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto">

                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Кнопки навигации -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="НАЗАД"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderThickness="1"
                            BorderBrush="#666666"
                            Width="100" 
                            Height="40"
                            FontSize="13"
                            Margin="0,0,10,0"
                            Cursor="Hand" Click="Button_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ДАЛЕЕ"
                            Background="#c69fd5"
                            Foreground="White"
                            Width="150" 
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Cursor="Hand" Click="Button_Click_1">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>