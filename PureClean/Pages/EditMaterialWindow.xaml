<Window x:Class="PureClean.Pages.EditMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование материала" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fdfdc9">

    <Grid>
        <Border Background="White" Margin="15" Padding="20" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="📝 Данные материала" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           Foreground="#333333"/>

                <StackPanel>
                    <!-- Название -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Название материала*" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName"
                                 Height="35"
                                 FontSize="14"
                                 BorderBrush="#c69fd5"
                                 BorderThickness="1"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Единица измерения -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Единица измерения*" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbUnit"
                                  Height="35"
                                  FontSize="14"
                                  BorderBrush="#c69fd5"
                                  BorderThickness="1">
                            <ComboBoxItem Content="кг" Tag="кг"/>
                            <ComboBoxItem Content="л" Tag="л"/>
                            <ComboBoxItem Content="шт" Tag="шт"/>
                            <ComboBoxItem Content="упак" Tag="упак"/>
                            <ComboBoxItem Content="м" Tag="м"/>
                            <ComboBoxItem Content="м²" Tag="м²"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Количество на складе -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Количество на складе" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtQuantity"
                                 Height="35"
                                 FontSize="14"
                                 BorderBrush="#c69fd5"
                                 BorderThickness="1"
                                 Padding="5"/>
                    </StackPanel>

                    <!-- Минимальный запас -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Минимальный запас*" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMinQuantity"
                                 Height="35"
                                 FontSize="14"
                                 BorderBrush="#c69fd5"
                                 BorderThickness="1"
                                 Padding="5"
                                 Text="10"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">

                    <Button Content="Отмена"
                            Width="100" 
                            Height="35"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            FontSize="13"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            Click="btnCancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnSave"
                            Content="Сохранить"
                            Width="100" 
                            Height="35"
                            Background="#c69fd5"
                            Foreground="White"
                            FontSize="13"
                            Cursor="Hand"
                            Click="btnSave_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>