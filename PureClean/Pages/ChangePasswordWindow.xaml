<Window x:Class="PureClean.Pages.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Смена пароля" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fdfdc9">

    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="15">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                              ShadowDepth="3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Margin="0,0,0,20">

                <TextBlock Text="🔑" 
                           FontSize="28"
                           Foreground="#c69fd5"
                           Margin="0,0,15,0"/>

                <TextBlock Text="Смена пароля"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Форма -->
            <StackPanel Grid.Row="1"
                        Margin="0,0,0,20">
                <!-- Новый пароль -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Новый пароль *"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtNewPassword"
                                 FontSize="14"
                                 Padding="10">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border CornerRadius="5" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </StackPanel>

                <!-- Подтверждение пароля -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Подтверждение пароля *"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmPassword"
                                 FontSize="14"
                                 Padding="10">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border CornerRadius="5" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </StackPanel>

                <!-- Требования к паролю -->
                <Border Background="#f5f5f5"
                        Padding="10"
                        CornerRadius="5"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Требования к паролю:"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#666666"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="• Минимум 6 символов"
                                   FontSize="11"
                                   Foreground="#666666"/>
                        <TextBlock Text="• Рекомендуется использовать буквы, цифры и специальные символы"
                                   FontSize="11"
                                   Foreground="#666666"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Ошибки валидации -->
                <Border x:Name="errorBorder"
                        Background="#FFEBEE"
                        BorderBrush="#FFCDD2"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="5"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtErrorMessage"
                               Foreground="#D32F2F"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancel"
                        Content="Отмена"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        Width="100"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Background="#c69fd5"
                        Foreground="White"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>