<Page x:Class="PureClean.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Каталог услуг" 
      Background="#fdfdc9"
      Loaded="Page_Loaded">

    <Grid>
        <!-- Шапка с навигацией -->
        <Border Grid.Row="0" 
                Background="#c69fd5" 
                Height="50"
                VerticalAlignment="Top"
                Margin="0,0,0,20"
                CornerRadius="0,0,15,15">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,20,0">

                <!-- Иконка корзины с количеством -->
                <Border x:Name="cartBorder"
                        Background="White" 
                        CornerRadius="10" 
                        Padding="8,5"
                        Margin="0,0,15,0"
                        Cursor="Hand"
                        ToolTip="Перейти в корзину"
                        MouseLeftButtonDown="CartIcon_MouseLeftButtonDown" 
                        Width="Auto"
                        MinWidth="57">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛒" 
                                   FontSize="16"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtCartCount" 
                                   Text="0"
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Foreground="#c69fd5"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Кнопки навигации -->
                <Button x:Name="btnMyOrders"
                        Content="Мои заказы"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Padding="10,5"
                        Cursor="Hand"
                        Click="MyOrdersButton_Click"/>

                <Button x:Name="btnProfile"
                        Content="Профиль"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Cursor="Hand"
                        Click="ProfileButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Панель фильтров -->
        <Border Width="300" 
                Background="White"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Margin="20,70,0,20"
                CornerRadius="15">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  Opacity="0.2" 
                                  ShadowDepth="3" 
                                  Color="#000000"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Фильтры"
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Поиск -->
                    <StackPanel Margin="0,0,0,20">
                        <Label Content="Поиск услуг"
                               Foreground="#333333"
                               FontSize="13"/>
                        <TextBox x:Name="txtSearch"
                                 Padding="10"
                                 FontSize="14"
                                 TextChanged="SearchTextBox_TextChanged"
                                 BorderBrush="#c69fd5"
                                 BorderThickness="1">

                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="5" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Background="{TemplateBinding Background}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <!-- Категории -->
                    <StackPanel Margin="0,0,0,20">
                        <Label Content="Категории"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               FontSize="14"/>

                        <StackPanel x:Name="categoryPanel" Margin="5,10,0,0">
                            <!-- Категории будут добавляться динамически -->
                        </StackPanel>
                    </StackPanel>

                    <!-- Цена -->
                    <StackPanel Margin="0,0,0,20">
                        <Label Content="Цена, руб"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               FontSize="14"/>

                        <StackPanel Margin="5,10,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="От:" 
                                           Width="30"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="txtMinPrice"
                                         Text="0"
                                         Width="80"
                                         Padding="5"
                                         BorderBrush="#c69fd5"
                                         BorderThickness="1">

                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="3" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="До:" 
                                           Width="30"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="txtMaxPrice"
                                         Text="5000"
                                         Width="80"
                                         Padding="5"
                                         BorderBrush="#c69fd5"
                                         BorderThickness="1">

                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="3" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Дорогие услуги -->
                    <StackPanel Margin="0,0,0,20">
                        <CheckBox x:Name="chkExpensive"
                                  Content="Только дорогие (>1000 руб)"
                                  FontSize="14"
                                  Foreground="#333333"
                                  Checked="CheckBoxFilter_Changed"
                                  Unchecked="CheckBoxFilter_Changed"/>
                    </StackPanel>

                    <!-- Кнопка сброса -->
                    <Button x:Name="btnResetFilters"
                            Content="Сбросить фильтры"
                            Background="Transparent"
                            Foreground="#c69fd5"
                            BorderThickness="1"
                            BorderBrush="#c69fd5"
                            Height="35"
                            FontSize="13"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0"
                            Cursor="Hand"
                            Click="btnResetFilters_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="resetBorder"
                                        CornerRadius="5"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="resetBorder" Property="Background" Value="#fdfdc9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Основной контент -->
        <Border Background="Transparent"
                Margin="340,70,20,20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель управления -->
                <StackPanel Orientation="Horizontal" 
                            Grid.Row="0"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Stretch">

                    <TextBlock Text="Каталог услуг"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"
                               VerticalAlignment="Center"/>

                    <!-- Сортировка -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="30,0,0,0"
                                VerticalAlignment="Center">
                        <Label Content="Сортировка:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                        <ComboBox x:Name="cmbSort"
                                  Width="150"
                                  SelectionChanged="SortComboBox_SelectionChanged"
                                  BorderBrush="#c69fd5"
                                  BorderThickness="1"
                                  Padding="5"
                                  Background="White">
                            <ComboBoxItem Content="По умолчанию"/>
                            <ComboBoxItem Content="По возрастанию цены"/>
                            <ComboBoxItem Content="По убыванию цены"/>
                            <ComboBoxItem Content="По названию"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Кнопки управления (справа) - только для админов/менеджеров -->
                    <StackPanel x:Name="adminControlsPanel"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="70,0,0,0"
                                Visibility="Collapsed">

                        <Button x:Name="btnAdd"
                                Content="Добавить услугу"
                                Background="#c69fd5"
                                Foreground="White"
                                BorderThickness="0"
                                Height="35"
                                Width="140"
                                FontSize="13"
                                Margin="0,0,10,0"
                                Cursor="Hand"
                                Click="AddButton_Click">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="addBorder"
                                            CornerRadius="5"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="addBorder" Property="Background" Value="#b58ac4"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Сетка услуг -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">

                    <WrapPanel x:Name="servicesPanel"
                               HorizontalAlignment="Left">
                        <!-- Услуги будут добавляться динамически -->
                    </WrapPanel>
                </ScrollViewer>

                <!-- Сообщение при отсутствии услуг -->
                <Border x:Name="noServicesPanel"
                        Grid.Row="1"
                        Background="White"
                        CornerRadius="10"
                        Padding="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📦" 
                                   FontSize="64"
                                   Foreground="#c69fd5"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Услуги не найдены"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Попробуйте изменить параметры фильтрации"
                                   Foreground="#666666"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>