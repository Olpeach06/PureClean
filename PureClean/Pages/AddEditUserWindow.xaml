<Window x:Class="PureClean.Pages.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fdfdc9"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Стиль для кнопки ComboBox -->
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                        Grid.ColumnSpan="2"
                        Background="White"
                        BorderBrush="#c69fd5"
                        BorderThickness="1"
                        CornerRadius="0,5,5,0"/>
                <Border Grid.Column="1" 
                        Margin="1"
                        Background="#c69fd5"
                        CornerRadius="0,4,4,0">
                    <Path x:Name="Arrow"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Fill="White"
                          Data="M0,0 L4,4 8,0 z"/>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="Background" Value="#f0f0f0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter TargetName="Border" Property="Background" Value="#e0e0e0"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- Стиль для текстового поля ComboBox -->
        <ControlTemplate x:Key="ComboBoxTextBoxTemplate" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" 
                    Background="Transparent" 
                    Focusable="False"/>
        </ControlTemplate>

        <!-- Стиль для CheckBox -->
        <ControlTemplate x:Key="CheckBoxTemplate" TargetType="CheckBox">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="checkBoxBorder"
                        Grid.Column="0"
                        Width="20"
                        Height="20"
                        Background="White"
                        BorderBrush="#c69fd5"
                        BorderThickness="1"
                        CornerRadius="3"
                        Margin="0,0,10,0">
                    <TextBlock x:Name="checkMark"
                               Text="✓"
                               Foreground="#c69fd5"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Border>
                <ContentPresenter Grid.Column="1"
                                  VerticalAlignment="Center"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="#b289c7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="15">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                              ShadowDepth="3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Margin="0,0,0,20">

                <TextBlock Text="{Binding UserIcon}" 
                           FontSize="28"
                           Foreground="#c69fd5"
                           Margin="0,0,15,0"/>

                <TextBlock Text="{Binding WindowTitle}"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Форма -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,20">
                <StackPanel>
                    <!-- Логин -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Логин *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtLogin"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="50">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Email *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="100">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Телефон -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Телефон"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPhone"
                                 FontSize="14"
                                 Padding="10"
                                 MaxLength="20">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border CornerRadius="5" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}">
                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Имя и Фамилия -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Имя -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Имя *"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtFirstName"
                                     FontSize="14"
                                     Padding="10"
                                     MaxLength="50">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Фамилия -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Фамилия *"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtLastName"
                                     FontSize="14"
                                     Padding="10"
                                     MaxLength="50">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <!-- Роль -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Роль *"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbRole"
                                  FontSize="14"
                                  Padding="10"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="RoleID">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="BorderBrush" Value="#c69fd5"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="toggleButton" 
                                                                  Template="{StaticResource ComboBoxToggleButtonTemplate}"
                                                                  Grid.Column="2" 
                                                                  Focusable="false"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press"/>
                                                    <ContentPresenter x:Name="contentPresenter"
                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      Margin="10,0,30,0"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      IsHitTestVisible="False"/>
                                                    <TextBox x:Name="PART_EditableTextBox"
                                                             Style="{x:Null}"
                                                             Template="{StaticResource ComboBoxTextBoxTemplate}"
                                                             HorizontalAlignment="Left"
                                                             VerticalAlignment="Center"
                                                             Margin="3,3,23,3"
                                                             Focusable="True"
                                                             Background="Transparent"
                                                             Visibility="Hidden"
                                                             IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                    <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True" 
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                        <Grid x:Name="DropDown"
                                                              SnapsToDevicePixels="True" 
                                                              MinWidth="{TemplateBinding ActualWidth}"
                                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                            <Border x:Name="DropDownBorder"
                                                                    Background="White"
                                                                    BorderBrush="#c69fd5"
                                                                    BorderThickness="1"
                                                                    CornerRadius="0,0,5,5"/>
                                                            <ScrollViewer SnapsToDevicePixels="True">
                                                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Grid>
                                                    </Popup>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="HasItems" Value="false">
                                                        <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="false">
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </Trigger>
                                                    <Trigger Property="IsGrouping" Value="true">
                                                        <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                                                    </Trigger>
                                                    <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                                        <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0,0,5,5"/>
                                                        <Setter TargetName="DropDownBorder" Property="Margin" Value="0,0,0,0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>

                    <!-- Статус -->
                    <StackPanel Margin="0,0,0,15">
                        <CheckBox x:Name="chkIsActive"
                                  Content="Активный пользователь"
                                  FontSize="14"
                                  Foreground="#333333"
                                  IsChecked="True"
                                  Template="{StaticResource CheckBoxTemplate}"/>
                    </StackPanel>

                    <!-- Пароль (только при добавлении) -->
                    <Border x:Name="passwordSection"
                            Margin="0,0,0,15"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Пароль"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPassword"
                                     FontSize="14"
                                     Padding="10"
                                     MaxLength="100">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="По умолчанию: default123"
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ошибки валидации -->
                    <Border x:Name="errorBorder"
                            Background="#FFEBEE"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="5"
                            Margin="0,0,0,15"
                            Visibility="Collapsed">
                        <TextBlock x:Name="txtErrorMessage"
                                   Foreground="#D32F2F"
                                   FontSize="13"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancel"
                        Content="Отмена"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        Width="100"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Background="#c69fd5"
                        Foreground="White"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>