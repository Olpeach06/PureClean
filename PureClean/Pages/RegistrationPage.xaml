<Page x:Class="PureClean.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PureClean.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Регистрация" 
      Background="#fdfdc9">


    <Grid>
        <!-- Карточка регистрации -->
        <Border Width="500" Background="White"
                    Padding="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,50,0,50">

            <!-- Стиль для скругления углов Border -->
            <Border.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Resources>

            <!-- Тень -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                      ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <StackPanel>
                <!-- Заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="👤" 
                                   FontSize="48"
                                   Foreground="#c69fd5"
                                   HorizontalAlignment="Center"/>
                    <TextBlock Text="Создание аккаунта" 
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#333333"
                                   Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Форма в 2 колонки -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0">
                        <!-- Имя -->
                        <StackPanel Margin="0,0,0,15">
                            <Label Content="Имя*"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <TextBox x:Name="txtFirstName"
                                         Padding="10"
                                         FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Фамилия -->
                        <StackPanel Margin="0,0,0,15">
                            <Label Content="Фамилия*"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <TextBox x:Name="txtLastName"
                                         Padding="10"
                                         FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,15">
                            <Label Content="Email*"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <TextBox x:Name="txtEmail"
                                         Padding="10"
                                         FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="2">
                        <!-- Телефон -->
                        <StackPanel Margin="0,0,0,15">
                            <Label Content="Телефон"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <TextBox x:Name="txtPhone"
                                         Padding="10"
                                         FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="#c69fd5"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border CornerRadius="5" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Background="{TemplateBinding Background}">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Пароль -->
                        <StackPanel Margin="0,0,0,15">
                            <Label Content="Пароль*"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="txtPassword"
                                                 Grid.Column="0"
                                                 Padding="10"
                                                 FontSize="14">
                                    <PasswordBox.Style>
                                        <Style TargetType="PasswordBox">
                                            <Setter Property="BorderBrush" Value="#c69fd5"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="PasswordBox">
                                                        <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </PasswordBox.Style>
                                </PasswordBox>

                                <!-- Кнопка просмотра пароля -->
                                <Button x:Name="btnShowPassword"
                                            Grid.Column="1"
                                            Width="40"
                                            Content="👁"
                                            FontSize="14"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5,0,0,0"
                                            Cursor="Hand"
                                            Click="ShowPassword_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                    CornerRadius="5"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Подтверждение пароля -->
                        <StackPanel Margin="0,0,0,30">
                            <Label Content="Подтвердите пароль*"
                                       Foreground="#333333"
                                       FontWeight="SemiBold"
                                       FontSize="13"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="txtConfirmPassword"
                                                 Grid.Column="0"
                                                 Padding="10"
                                                 FontSize="14">
                                    <PasswordBox.Style>
                                        <Style TargetType="PasswordBox">
                                            <Setter Property="BorderBrush" Value="#c69fd5"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="PasswordBox">
                                                        <Border CornerRadius="5" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    Background="{TemplateBinding Background}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </PasswordBox.Style>
                                </PasswordBox>

                                <!-- Кнопка просмотра подтверждения пароля -->
                                <Button x:Name="btnShowConfirmPassword"
                                            Grid.Column="1"
                                            Width="40"
                                            Content="👁"
                                            FontSize="14"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5,0,0,0"
                                            Cursor="Hand"
                                            Click="ShowConfirmPassword_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                    CornerRadius="5"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Сообщение об ошибке -->
                <Border x:Name="errorMessage" 
                            Background="#FFF2DEDE"
                            BorderBrush="#FFEBCCD1"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                    <Border.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Border.Resources>
                    <TextBlock x:Name="txtErrorMessage"
                                   Foreground="#FFA94442"
                                   TextWrapping="Wrap"/>
                </Border>

                <!-- Кнопка регистрации -->
                <Button x:Name="btnRegister"
                            Content="ЗАРЕГИСТРИРОВАТЬСЯ" 
                            Click="RegisterButton_Click"
                            Background="#c69fd5"
                            Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            Height="45"
                            BorderThickness="0"
                            Margin="0,0,0,20"
                            Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#a074b3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Ссылка на вход -->
                <TextBlock HorizontalAlignment="Center">
                        <Hyperlink Click="LoginHyperlink_Click"
                                   Foreground="#c69fd5"
                                   TextDecorations="None">
                            <Run Text="Уже есть аккаунт? Войти"/>
                        </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>