<Window x:Class="PureClean.Pages.EditOrderStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Изменение статуса заказа" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#fdfdc9"
        Loaded="Window_Loaded">

    <Border Background="White"
            Margin="20"
            Padding="30"
            CornerRadius="15">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                              ShadowDepth="3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Margin="0,0,0,20">

                <TextBlock Text="✏️" 
                           FontSize="28"
                           Foreground="#c69fd5"
                           Margin="0,0,15,0"/>

                <TextBlock Text="Изменение статуса заказа"
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
            </StackPanel>

            <!-- Форма -->
            <StackPanel Grid.Row="1" 
                        Margin="0,0,0,20">

                <!-- Информация о заказе -->
                <Border Background="#f0f8ff"
                        BorderBrush="#87CEEB"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="5"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtOrderInfo"
                                   Text="Заказ №0000"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtClientInfo"
                                   Text="Клиент: Неизвестен"
                                   FontSize="13"
                                   Foreground="#666666"
                                   Margin="0,5,0,0"/>
                        <TextBlock x:Name="txtCurrentStatus"
                                   Text="Текущий статус: Неизвестен"
                                   FontSize="13"
                                   Foreground="#666666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Новый статус -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Новый статус *"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,8"/>

                    <WrapPanel>
                        <RadioButton x:Name="rbAccepted"
                                     Content="Принят"
                                     GroupName="Status"
                                     Margin="0,0,15,5"
                                     FontSize="14"
                                     Tag="Принят"
                                     Checked="StatusRadioButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="radioBorder"
                                                            Width="20"
                                                            Height="20"
                                                            BorderBrush="#c69fd5"
                                                            BorderThickness="2"
                                                            CornerRadius="10"
                                                            Margin="0,0,8,0"
                                                            Background="White">
                                                        <Ellipse x:Name="radioCheck"
                                                                 Width="10"
                                                                 Height="10"
                                                                 Fill="#c69fd5"
                                                                 Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="radioBorder" Property="Background" Value="#fdfdc9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>

                        <RadioButton x:Name="rbInProgress"
                                     Content="В работе"
                                     GroupName="Status"
                                     Margin="0,0,15,5"
                                     FontSize="14"
                                     Tag="В работе"
                                     Checked="StatusRadioButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="radioBorder"
                                                            Width="20"
                                                            Height="20"
                                                            BorderBrush="#c69fd5"
                                                            BorderThickness="2"
                                                            CornerRadius="10"
                                                            Margin="0,0,8,0"
                                                            Background="White">
                                                        <Ellipse x:Name="radioCheck"
                                                                 Width="10"
                                                                 Height="10"
                                                                 Fill="#c69fd5"
                                                                 Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="radioBorder" Property="Background" Value="#fdfdc9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>

                        <RadioButton x:Name="rbReady"
                                     Content="Готов"
                                     GroupName="Status"
                                     Margin="0,0,15,5"
                                     FontSize="14"
                                     Tag="Готов"
                                     Checked="StatusRadioButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="radioBorder"
                                                            Width="20"
                                                            Height="20"
                                                            BorderBrush="#c69fd5"
                                                            BorderThickness="2"
                                                            CornerRadius="10"
                                                            Margin="0,0,8,0"
                                                            Background="White">
                                                        <Ellipse x:Name="radioCheck"
                                                                 Width="10"
                                                                 Height="10"
                                                                 Fill="#c69fd5"
                                                                 Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="radioBorder" Property="Background" Value="#fdfdc9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>

                        <RadioButton x:Name="rbCompleted"
                                     Content="Выдан"
                                     GroupName="Status"
                                     Margin="0,0,15,5"
                                     FontSize="14"
                                     Tag="Выдан"
                                     Checked="StatusRadioButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="radioBorder"
                                                            Width="20"
                                                            Height="20"
                                                            BorderBrush="#c69fd5"
                                                            BorderThickness="2"
                                                            CornerRadius="10"
                                                            Margin="0,0,8,0"
                                                            Background="White">
                                                        <Ellipse x:Name="radioCheck"
                                                                 Width="10"
                                                                 Height="10"
                                                                 Fill="#c69fd5"
                                                                 Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="radioBorder" Property="Background" Value="#fdfdc9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>

                        <RadioButton x:Name="rbCancelled"
                                     Content="Отменен"
                                     GroupName="Status"
                                     Margin="0,0,15,5"
                                     FontSize="14"
                                     Tag="Отменен"
                                     Checked="StatusRadioButton_Checked">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="radioBorder"
                                                            Width="20"
                                                            Height="20"
                                                            BorderBrush="#c69fd5"
                                                            BorderThickness="2"
                                                            CornerRadius="10"
                                                            Margin="0,0,8,0"
                                                            Background="White">
                                                        <Ellipse x:Name="radioCheck"
                                                                 Width="10"
                                                                 Height="10"
                                                                 Fill="#c69fd5"
                                                                 Visibility="Collapsed"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="radioCheck" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="radioBorder" Property="Background" Value="#fdfdc9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="radioBorder" Property="BorderBrush" Value="#b289c7"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                    </WrapPanel>
                </StackPanel>

                <!-- Комментарий -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Комментарий"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtComment"
                             FontSize="14"
                             Padding="10"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="true"
                             VerticalScrollBarVisibility="Auto">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="BorderBrush" Value="#c69fd5"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="5" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Ошибки валидации -->
                <Border x:Name="errorBorder"
                        Background="#FFEBEE"
                        BorderBrush="#FFCDD2"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="5"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtErrorMessage"
                               Foreground="#D32F2F"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="btnCancel"
                        Content="Отмена"
                        Background="Transparent"
                        Foreground="#666666"
                        BorderBrush="#666666"
                        BorderThickness="1"
                        Width="100"
                        Height="40"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="btnSave"
                        Content="Сохранить"
                        Background="#c69fd5"
                        Foreground="White"
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                CornerRadius="5"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>