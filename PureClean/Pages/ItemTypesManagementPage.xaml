<Page x:Class="PureClean.Pages.ItemTypesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Управление типами изделий" 
      Background="#fdfdc9">

    <Grid>
        <!-- Основной контент -->
        <Border Background="White"
                Margin="20"
                Padding="30">

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Border.Style>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" 
                                  ShadowDepth="3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопка Назад -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal"
                            Margin="0,0,0,30">

                    <Button x:Name="btnBack"
                            Content="← Назад"
                            Width="100"
                            Height="40"
                            Margin="0,0,20,0"
                            Background="Transparent"
                            Foreground="#666666"
                            BorderBrush="#666666"
                            BorderThickness="1"
                            FontSize="14"
                            Cursor="Hand"
                            Click="btnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="👕" 
                               FontSize="32"
                               Foreground="#c69fd5"
                               Margin="0,0,15,0"/>

                    <TextBlock Text="Управление типами изделий"
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#333333"/>
                </StackPanel>

                <!-- Панель поиска и кнопок -->
                <Border Grid.Row="1"
                        Background="#fdfdc9"
                        Padding="20"
                        Margin="0,0,0,20"
                        CornerRadius="10">

                    <StackPanel>
                        <WrapPanel>
                            <!-- Поиск -->
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,20,10">
                                <Label Content="Поиск:"
                                       FontSize="14"
                                       Foreground="#333333"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>

                                <TextBox x:Name="txtSearch"
                                         Width="300"
                                         Padding="10"
                                         FontSize="14"
                                         TextChanged="txtSearch_TextChanged"
                                         BorderBrush="#c69fd5"
                                         BorderThickness="1">
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border CornerRadius="5" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,0,0,10">
                                <Button x:Name="btnAddItemType"
                                        Content="+ Добавить тип"
                                        Background="#c69fd5"
                                        Foreground="White"
                                        Width="200"
                                        Height="35"
                                        FontSize="13"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"
                                        Click="btnAddItemType_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                CornerRadius="5"
                                                                Background="{TemplateBinding Background}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#b289c7"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Таблица типов изделий -->
                <Border Grid.Row="2"
                        Background="#fdfdc9"
                        Padding="15"
                        Margin="0,0,0,20">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Border.Style>

                    <DataGrid x:Name="itemTypesGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              BorderThickness="0"
                              Background="Transparent"
                              RowHeight="40">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding ItemTypeID}"
                                                Width="60"/>

                            <DataGridTextColumn Header="Название типа" 
                                                Binding="{Binding Name}"
                                                Width="200"/>

                            <DataGridTextColumn Header="Материал" 
                                                Binding="{Binding Material}"
                                                Width="150"/>

                            <DataGridTextColumn Header="Инструкции по уходу" 
                                                Binding="{Binding CareInstructions}"
                                                Width="300"/>

                            <DataGridTemplateColumn Header="Действия" 
                                                    Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️"
                                                    ToolTip="Редактировать"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="btnEdit_Click"
                                                    Tag="{Binding ItemTypeID}"
                                                    Margin="0,0,5,0"/>

                                            <Button Content="🗑️"
                                                    ToolTip="Удалить"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="Transparent"
                                                    Foreground="#FF4444"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="btnDelete_Click"
                                                    Tag="{Binding ItemTypeID}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Статистика -->
                <Border Grid.Row="3"
                        Background="#e8f5e8"
                        Padding="15"
                        CornerRadius="10">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👕 Всего типов изделий: "
                                   FontSize="14"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtTotalCount"
                                   Text="0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#c69fd5"
                                   Margin="5,0,30,0"/>

                        <TextBlock Text="📍 Разные материалы: "
                                   FontSize="14"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="txtMaterialsCount"
                                   Text="0"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>